
variable        NAME index chcl
log             ${NAME}.log
variable        infile index box.lmp
variable        mytemp index 590.0
variable        pressure index 1.0
variable        seed index 242321
variable	dt index 1.0

units            real
special_bonds    lj 0.0 0.0 0.5 coul 0.0 0.0 0.5
atom_style       full
pair_style	 lj/cut/coul/long 12.0

bond_style	 harmonic
dihedral_style	 opls
angle_style	 harmonic
improper_style	 cvff

read_data        ${infile}

kspace_style    pppm 1E-4
pair_modify     mix geometric tail yes

timestep        ${dt}

minimize        1.0e-4 1.0e-6 1000 1000

velocity        all create ${mytemp} ${seed}

dump            1 all custom 10000 ${NAME}.lammpstrj id type xu yu zu
thermo_style    custom step vol temp press ke pe ebond eangle edihed eimp emol evdwl etail ecoul elong enthalpy density lx ly lz
thermo          200

fix            1a all shake 0.0001 50 0 b 1 4 6 8

fix             2 all npt temp ${mytemp} ${mytemp} $(100.0*dt) iso ${pressure} ${pressure} $(1000.0*dt)

run             5000000

write_data      data.${NAME}

write_restart   restart.${NAME}

